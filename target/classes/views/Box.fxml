<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" stylesheets="@Box.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FRONT.Controller.boxController">
    <!-- 上半部分：欢迎区 -->
    <VBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="300"
          alignment="CENTER"
          spacing="10"
          style="-fx-background-color: linear-gradient(to bottom, #1f2b3a, #2c3e50);">
        <Label text="🎮 我的游戏库" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
        <Label text="欢迎回来，玩家！" style="-fx-text-fill: #bdc3c7; -fx-font-size: 16px;" />
    </VBox>

    <!-- 下半部分：表格区 -->
    <TableView fx:id="gameTable"
               AnchorPane.topAnchor="200" AnchorPane.bottomAnchor="10"
               AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
               id="game-table">
        <columns>
            <TableColumn fx:id="nameCol" text="游戏名称"/>
            <TableColumn fx:id="dateCol" text="购买日期"/>
            <TableColumn fx:id="priceCol" text="价格"/>
        </columns>
    </TableView>
</AnchorPane>


