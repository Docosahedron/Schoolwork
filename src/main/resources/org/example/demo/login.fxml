<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.demo.LoginController">
   <Pane prefHeight="451.0" prefWidth="704.0">
      <Pane layoutX="28.0" layoutY="64.0" prefHeight="303.0" prefWidth="459.0">
         <TextField fx:id="usernameField" layoutY="60.0" prefHeight="43.0" prefWidth="401.0"/>
         <PasswordField fx:id="passwordField" layoutY="138.0" prefHeight="43.0" prefWidth="401.0"/>
         <Text fill="#caf1f4" layoutY="55.0" strokeType="OUTSIDE" strokeWidth="0.0" text="用账户名称登录"
               wrappingWidth="118.90692138671875">
            <font>
               <Font size="15.0"/>
            </font>
         </Text>
         <Text fill="#caf1f4" layoutX="-1.0" layoutY="133.0" strokeType="OUTSIDE" strokeWidth="0.0" text="密码">
            <font>
               <Font size="15.0"/>
            </font>
         </Text>
         <Button fx:id="loginButton" layoutX="58.0" layoutY="235.0" mnemonicParsing="false"
                 onAction="#handleLogin" prefHeight="54.0" prefWidth="285.0" text="登录" textAlignment="CENTER"
                 textFill="#6ebfff" wrapText="true">
            <font>
               <Font size="26.0"/>
            </font>
         </Button>
         <CheckBox layoutY="187.0" mnemonicParsing="false" text="记住我" textFill="#caf1f4">
