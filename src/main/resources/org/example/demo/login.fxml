      </Pane>
      <Button layoutX="576.0" layoutY="367.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="93.0"
              text="免费注册账户" onAction="#handleRegister"/>
      <Text layoutX="471.0" layoutY="382.0" strokeType="OUTSIDE" strokeWidth="0.0" text="还没有账户？">
         <font>
            <Font size="15.0"/>
         </font>
      </Text>
      <Button fx:id="exitButton" layoutX="28.0" layoutY="31.0" mnemonicParsing="false" onAction="#handleExit"
              text="退出">
         <font>
            <Font size="19.0"/>
         </font>
      </Button>
   </Pane>
</AnchorPane>
